<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="martisep.thymesup.SummaryActivity"
    android:orientation="vertical">

    <TextView android:text="Zkontroluj uhodnutá slova:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginBottom="10dp"
        android:textSize="20sp" />
    <ListView
        android:id="@+id/listViewSummary"
        android:fadeScrollbars="false"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent">

    </ListView>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Aktuální skóre (Tým X): Y"
        android:id="@+id/textView_score"
        android:layout_weight="0"
        android:textSize="20sp"
        android:textColor="#ff34d3c8"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Potvrdit"
        android:id="@+id/button_confirm_summary"
        android:layout_weight="0" />

</LinearLayout>
